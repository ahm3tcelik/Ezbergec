<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.ahmetc.ezbergec">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/logo"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:resizeableActivity="false"
        android:theme="@style/AppTheme">
        <activity android:name=".Activities.Slider"
            android:configChanges="orientation"
            android:screenOrientation="portrait"/>
        <activity android:name=".Activities.Info"
            android:configChanges="orientation"
            android:screenOrientation="portrait"/>
        <activity android:name=".Activities.Sinav"
            android:configChanges="orientation"
            android:screenOrientation="portrait"/>
        <activity android:name=".Activities.detayDers"
            android:configChanges="orientation"
            android:screenOrientation="portrait"/>
        <activity android:name=".Activities.Root"
            android:configChanges="orientation"
            android:screenOrientation="portrait"/>
        <activity android:name=".Activities.Splash"
            android:configChanges="orientation"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>